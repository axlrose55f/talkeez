   <%=f.collection_select(:genre_id, @genres, :id, :name) %>
   <br>
   <%= f.submit "Add" %>&nbsp;&nbsp;<%= link_to "Cancel", '#', :onclick => "$(movieGenreEdit).hide();", :style => "float:right;"  %>
  <% end %>
 
</div>