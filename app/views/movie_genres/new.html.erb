   <p><%=h  g.name %></p>
   <span class="token-input-delete-token-facebook"><%= link_to "X", movie_genre_path(:id => g.id, :movie_id => @movie.id), :confirm => 'Are you sure?', :method => :delete %></span>
  </li>
<% end %>
</ul>
  <% form_for(@movie_genre) do |f| %>
   <%= f.error_messages %>
