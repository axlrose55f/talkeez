<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta http-equiv="Content-Script-Type" content="text/javascript">
  <title>Talkeez: <%= controller_name %> : <%= controller.action_name %></title>
  <link href="/stylesheets/common.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/stylesheets/reset.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/stylesheets/2_col.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/stylesheets/personpage.css" media="screen" rel="stylesheet" type="text/css" />

  <script src="/javascripts/application.js" type="text/javascript"></script>
  <script src="/javascripts/prototype.js" type="text/javascript"></script>
  <script src="/javascripts/scriptaculous.js" type="text/javascript"></script>

<%= yield(:head) %>
<%= ajaxful_rating_style %>
</head>
<body>

<div id="doc2" class="yui-t2">
<div id="hd">
<div id="ctl00_ctl00_m_tabsPnl" class="sh_tabsPnl">					
<div class="TempNavBg">
<ul id="_HdrNav" class="Nav">
<li class="Home " id="musicNav"><a href="/"><span><b>&nbsp;&nbsp;&nbsp;Talkeez&nbsp;&nbsp;&nbsp;</b></span></a></li>
<li class="Home " id="musicNav"><a href="/movies"><span>Movies</span></a></li>																																																																																													
<li class="Home " id="artistsNav"><a href="/artists"><span>Artists</span></a></li>
<li class="Home " id="genresNav"><a href="/genres"><span>Genres</span></a></li>		
<li class="Home " id="awardsNav"><a href="/awards"><span>Awards</span></a></li>
<% if permitted_to? :manage, :users %>
<li class="Home " id="peopleNav"><a href="/users/<%= current_user.id%>"><span>People</span></a></li>		
<% end %>

</ul>
<!-- sub nav -->
<ul class="subNav">																			
<div>
   <% if current_user %>
		   <%= link_to "Profile" , user_path(current_user.id) %> |
		   <%= link_to "Logout" , logout_path %>
	<% else %>
		<!--  <%= link_to "Register" , new_user_path %> | -->
		  <%= link_to "Login" , login_path %>
	<% end %>
</div>

<!-- facebook -->
<%
=begin 
%>
	<%= fb_connect_async_js %>
	<% if current_user %>
		 <%= "Hey " %><%= link_to "#{current_user.username}!" , user_path(current_user.id) %> |
   		  <% if current_facebook_user %>
		   <%= fb_logout_link("Logout", logout_path) %>
		  <% else %>
		    <%= link_to "local Logout" , logout_path %>
		  <% end %>	
		  &nbsp;	
	<% else %>
		<%= authlogic_facebook_login_button("login", {:controller => 'fblogin',
											 :perms => 'user_about_me,email,user_birthday',
											  })  %>&nbsp;
											  
	<% end %>
<%
=end 
%>	
<!-- end facebook -->


</ul>
<!-- end sub nav -->					
<div class="TempNavLft"></div>					
<div class="TempNavRgt"></div>				
</div>			
</div>	

<!-- Awesome Search Bar -->
 <%= yield :searchBar %>
<!-- End Awesome Search Bar -->
<% flash.each do |key, msg| %>
 <center>
 <div id="message_block" class="message_block"> 
    <p class="close"><%= link_to_function 'Close [X]', "Effect.Fade('message_block')" %></p>
    <ul class="<%= key %>">
	   <li><h4><p><%= msg %></p></h4></li>
    </ul>
    <div class="clear"></div>
  </div>
 </center> 
<% end %>
<center><div id="ajax-error-div" style="width: 500px;"></div></center>
<!--Main Body -->
<div id="bd" class="bg-wrapper">
   <!-- main container -->
	<%= yield :layout %>
</div>

<!-- Footer -->

	<div id="footerWrp" class="footerWrp ft-wrapper">
		<div class="contner clearfix">
				<ul class="lower">
					<li><span>Â© 2007-2013 Talkeez.com</span></li>
				
					<li><a href="http://www.talkeez.com/">HELP</a></li>
					<li><a href="http://www.talkeez.com/careers">FAQ</a></li>				
					<li class="privPol"><a href="http://www.talkeez.com/legal/privacy">Privacy Policy</a></li>
					<li class="lastOne"><a href="http://www.talkeez.com/legal/terms">Terms and Conditions</a></li>
				
				</ul>
	     </div>
		</div>

	
		
<!-- end footer-->
</div>
</div>
<!-- JS files -->
 <%= javascript_include_tag 'jquery' %>
 <%= javascript_include_tag :defaults %>
<!-- end JS files -->
</body>
</html>
