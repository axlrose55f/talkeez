<h1>Editing award</h1>

<% form_for @award, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
<p>
  <%= f.file_field :image%>
</p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>


<%= link_to 'Show', @award %> |
<%= link_to 'Back', awards_path %>

